%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage{tikz}
\RequirePackage{calc}

% end of load required packages


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%% theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeBKUsidebar}}
\DeclareOptionBeamer{lightheaderbg}{\PassOptionsToPackage{lightheaderbg}{beamercolorthemeBKUsidebar}}
\DeclareOptionBeamer{transparent}{\PassOptionsToPackage{transparent}{beamerinnerthemeBKUsidebar}}
\DeclareOptionBeamer{left}
{
	\PassOptionsToPackage{left}{beamerouterthemeBKUsidebar}
	\PassOptionsToPackage{left}{beamerinnerthemeBKUsidebar}
}
\DeclareOptionBeamer{right}
{
	\PassOptionsToPackage{right}{beamerouterthemeBKUsidebar}
	\PassOptionsToPackage{right}{beamerinnerthemeBKUsidebar}
}
\ProcessOptionsBeamer

%%% theme definitions
% nothing

% end of theme options and definitions


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\mode<presentation>% refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
	\useinnertheme{BKUsidebar}
	\useoutertheme{BKUsidebar}
	\usecolortheme{BKUsidebar}
}

% end of beamer specific options

\mode<all>
